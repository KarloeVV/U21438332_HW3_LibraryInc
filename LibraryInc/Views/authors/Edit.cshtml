@model LibraryInc.Models.authors

@{
    Layout = null; // Disables layout for this view
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery") // Renders JavaScript bundles (jQuery)
    @Scripts.Render("~/bundles/jqueryval") // Renders JavaScript bundles (jQuery validation)

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken() // Helps prevent cross-site request forgery (CSRF) attacks

        <div class="form-horizontal">
            <h4>authors</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" }) // Displays model validation errors

            @Html.HiddenFor(model => model.authorId) // Generates a hidden input for authorId

            <div class="form-group">
                @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" }) // Label for the name field
                <div class="col-md-10">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } }) // Input field for the name
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" }) // Displays validation errors for the name field
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.surname, htmlAttributes: new { @class = "control-label col-md-2" }) // Label for the surname field
                <div class="col-md-10">
                    @Html.EditorFor(model => model.surname, new { htmlAttributes = new { @class = "form-control" } }) // Input field for the surname
                    @Html.ValidationMessageFor(model => model.surname, "", new { @class = "text-danger" }) // Displays validation errors for the surname field
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" /> <!-- Submit button to save the form -->
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index") <!-- Link to navigate back to the list of authors -->
    </div>
</body>
</html>
